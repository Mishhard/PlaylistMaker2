<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">@dimen/main_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/window_title</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icons_padding</item>
        <item name="iconTint">@color/dark_gray</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/main_padding</item>
        <item name="android:background">?attr/mainBackgroundColor</item>
        <item name="android:paddingTop">@dimen/status_bar_height</item>
    </style>

    <style name="SettingsButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_button</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:backgroundTint">?attr/settingsBackgroundColor</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">@dimen/settings_button_padding_left</item>
        <item name="android:paddingEnd">@dimen/settings_button_padding_right</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">@dimen/settings_button_letter_spacing</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textSize">@dimen/settings_list_font_size</item>
        <item name="iconTint">@color/light_gray</item>
        <item name="iconGravity">end</item>
        <item name="iconSize">@dimen/settings_icon_size</item>
    </style>

    <style name="TextView">
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">@dimen/window_title</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="CursorTheme">
        <item name="colorControlActivated">@color/search_light_blue</item>
        <item name="colorAccent">@color/search_light_blue</item>
    </style>

    <style name="NoShadowButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="elevation">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="SearchTrackTextView">
        <item name="android:textSize">@dimen/search_track_artist</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
